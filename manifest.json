{
  "manifest_version": 3,
  "name": "YouTube to PureTube Redirector",
  "version": "1.0.0",
  "description": "Suggests watching YouTube videos on PureTube for a less distracting experience.",
  "permissions": ["notifications", "scripting", "tabs", "webNavigation", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
